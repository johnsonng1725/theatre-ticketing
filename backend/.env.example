# Copy to .env and fill in real values — never commit .env to git

# PostgreSQL connection string (Render auto-injects this)
DATABASE_URL=postgresql://user:password@localhost:5432/theatre_ticketing

# Secret keys for admin endpoints
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DASHBOARD_KEY=replace-with-a-strong-random-secret
SCANNER_KEY=replace-with-a-different-random-secret

# Comma-separated list of allowed frontend origins (no trailing slashes)
# Example: https://your-site.netlify.app,https://custom-domain.com
CORS_ORIGINS=https://your-site.netlify.app

# ── Email confirmation ─────────────────────────────────────────────────────
# Sends a booking confirmation email with QR code after each registration.
# Leave SMTP_USER / SMTP_PASS blank to disable (registration still works).
#
# Gmail setup:
#   1. Enable 2-Step Verification on your Google account
#   2. Go to: https://myaccount.google.com/apppasswords
#   3. Create an App Password (select "Mail" + your device)
#   4. Paste the 16-character password as SMTP_PASS below
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=xxxx-xxxx-xxxx-xxxx
SMTP_FROM=your-gmail@gmail.com
